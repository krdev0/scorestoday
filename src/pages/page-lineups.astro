<style lang="scss">
    .stats {
        &__controls {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            gap:var(--space-xl);
            margin: var(--space-default) 0;
            a {
                display: inline-flex;
                text-decoration: none;
                color:var(--color-white);
                font-size: var(--font-sm);

                &.active {
                    background: linear-gradient(var(--gradient));
                    padding:14px 20px;
                    border-radius: 23px;
                }
            }
        }
    }
</style>